				        		model.attr("id","");
				        		var goods = list[i];
				        		var price = goods.price;
								model.find("img").attr("data-url","./upload/download.do?fileName="+goods.picName).attr("title",goods.title).attr("alt",goods.title);
				            	model.find(".img-a").attr("href","./shirt?current="+i+"#气质衬衫");
		            			model.find(".title-a").attr("href","./shirt?current="+i+"#气质衬衫");
				            	model.find(".title").html(goods.title);
				            	model.find(".btn").attr("href","./shirt?current="+i+"#气质衬衫");
				            	model.find(".buy-num").html(goods.buyNum);
				            	model.find(".nowprice").html("￥"+goods.nowPrice);
				            	model.find(".oldprice").html("￥"+price);
				            	model.show();
				            	colDiv.append(model);
			        	}
			        	$("#shirt_div").closest(".goods-area").show();
			        	$(".thumbnail img").scrollLoading();
					}
				});
				
				//获取时尚热裤
				jQuery.ajax({
					type : 'Get',
					contentType : 'application/json',
					url : "${ctx}/goods/goodsListByGrade.do?pageSize="+pageSize+"&grade=4&currPage=1&categoryId=0",
					async:false,
					dataType : 'json',
					success:function(dataObj){
			        	var list = dataObj.obj.goodsList;
			        	for(var i = 0 ;i<list.length;i++){
			        		var colDiv = $("#trousers_div").find(".col"+i%col);
								var model = $("#goods_new_model").clone();
				        		model.attr("id","");
				        		var goods = list[i];
				        		var price = goods.price;
								model.find("img").attr("data-url","./upload/download.do?fileName="+goods.picName).attr("title",goods.title).attr("alt",goods.title);
				            	model.find(".img-a").attr("href","./fashionTrousers?current="+i+"#时尚热裤");
		            			model.find(".title-a").attr("href","./fashionTrousers?current="+i+"#时尚热裤");
				            	model.find(".title").html(goods.title);
				            	model.find(".btn").attr("href","./fashionTrousers?current="+i+"#时尚热裤");
				            	model.find(".buy-num").html(goods.buyNum);
				            	model.find(".nowprice").html("￥"+goods.nowPrice);
				            	model.find(".oldprice").html("￥"+price);
				            	model.show();
				            	colDiv.append(model);
			        	}
			        	$("#trousers_div").closest(".goods-area").show();
			        	$(".thumbnail img").scrollLoading();
					}
				});
			
		});
	</script>
	
