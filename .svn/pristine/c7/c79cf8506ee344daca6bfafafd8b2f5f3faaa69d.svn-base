	<script>
		$(function(){
				var col = 4;
				var pageSize = 8;
				//非PC布局设置
				if(!jWei.util.isPC()){
					col = 3;
					pageSize = 6;
					var layoutHtml = $("#not_pc_div_model").html();
					$(".goods-layout").each(function(){
						$(this).html(layoutHtml);
					});
				}
				//获取人气单品
				jQuery.ajax({
					type : 'Get',
					contentType : 'application/json',
					url : "${ctx}/goods/goodsListByGrade.do?pageSize="+pageSize+"&grade=5&currPage=1&categoryId=0",
					async:false,
					dataType : 'json',
					success:function(dataObj){
			        	var list = dataObj.obj.goodsList;
			        	for(var i = 0 ;i<list.length;i++){
			        		var colDiv = $("#hot_div").find(".col"+i%col);
								var model = $("#goods_new_model").clone();
				        		model.attr("id","");
				        		var goods = list[i];
				        		var price = goods.price;
								
								model.find("img").attr("data-url","./upload/download.do?fileName="+goods.picName).attr("title",goods.title).attr("alt",goods.title);
				            	model.find(".img-a").attr("href","${ctx}/detailGoods/"+goods.id);
		            			model.find(".title-a").attr("href","${ctx}/detailGoods/"+goods.id);
				            	model.find(".title").html(goods.title);
				            	model.find(".btn").attr("href","${ctx}/detailGoods/"+goods.id);
				            	model.find(".buy-num").html(goods.buyNum);
				            	model.find(".nowprice").html("￥"+goods.nowPrice);
				            	model.find(".oldprice").html("￥"+price);
				            	model.show();
				            	colDiv.append(model);
			        	}
			        	$(".thumbnail img").scrollLoading();
					}
				});
				
				//获取连衣裙专场
				jQuery.ajax({
					type : 'Get',
					contentType : 'application/json',
					url : "${ctx}/goods/goodsListByGrade.do?pageSize="+pageSize+"&grade=1&currPage=1&categoryId=0",
					async:false,
					dataType : 'json',
					success:function(dataObj){
			        	var list = dataObj.obj.goodsList;
			        	for(var i = 0 ;i<list.length;i++){
			        		var colDiv = $("#dress_div").find(".col"+i%col);
								var model = $("#goods_new_model").clone();
				        		model.attr("id","");
				        		var goods = list[i];
				        		var price = goods.price;
								
								model.find("img").attr("data-url","./upload/download.do?fileName="+goods.picName).attr("title",goods.title).attr("alt",goods.title);
				            	model.find(".img-a").attr("href","./dress?current="+i+"#连衣裙专场");
		            			model.find(".title-a").attr("href","./dress?current="+i+"#连衣裙专场");
				            	model.find(".title").html(goods.title);
				            	model.find(".btn").attr("href","./dress?current="+i+"#连衣裙专场");
				            	model.find(".buy-num").html(goods.buyNum);
				            	model.find(".nowprice").html("￥"+goods.nowPrice);
				            	model.find(".oldprice").html("￥"+price);
				            	model.show();
				            	colDiv.append(model);
			        	}
			        	$("#dress_div").closest(".goods-area").show();
			        	$(".thumbnail img").scrollLoading();
					}
				});
				
				//获取春季外套
				jQuery.ajax({
					type : 'Get',
					contentType : 'application/json',
					url : "${ctx}/goods/goodsListByGrade.do?pageSize="+pageSize+"&grade=3&currPage=1&categoryId=0",
					async:false,
					dataType : 'json',
					success:function(dataObj){
			        	var list = dataObj.obj.goodsList;
