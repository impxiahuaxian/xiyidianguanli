	<script>
		$(function(){
			var zhuji = $.cookie("zhuji");
			if(zhuji){
				zhuji = zhuji + ",${id}";
			}else{
				zhuji = "${id}";
			}  
			//$.removeCookie("zhuji",{path:"/"});
			$.cookie("zhuji",zhuji,{path:"/"});
			
			if(jWei.util.isPC()){
				$("#safe_desc").show();
			}
			$("#fengmian_sl").on("click","li",function(){
				return false;
			});
			$("#fengmian_sl li").hover(function(){
				$("#fengmian_sl").find(".tb-selected").removeClass("tb-selected");
				$(this).addClass("tb-selected");
			});
			
			//是否显示颜色图片，默认false		
			var isColorPic = false;
			
			//设置商品详细信息
			jQuery.ajax({
					type : 'Get',
					contentType : 'application/json',
					url : '${ctx}/goods/get.do',
					async:false,
					data : {
						id : "${id}",
					},
					dataType : 'json',
					success : function(data) {
						if(data.result){
							var obj = data.obj;
							//设置商品基本信息
							var goods = obj.goods;
							$(".shop-box #install_id").html(goods.installType == 0?'整装':'组装');
							$(".shop-box .img-box").attr("src","${ctx }/upload/download.do?fileName="+goods.picName).data("pic",goods.picName);
							$(".shop-box .img-box").attr("alt",goods.title);
							$(".shop-box .shopinfo").html(goods.title+"（顺丰包邮、货到付款	）");
							$(".shop-box #lastsale_id").html(goods.buyNum+"件");
							$(".shop-box #nowprice").html(goods.nowPrice);  
							//$(".fix-nowprice").html("￥"+obj.nowPrice);
							$(".shop-box .free_cost").html(goods.discount+"折");
							$(".shop-box .oldprice").html(goods.price);
							$("#brand_tips").attr("data-brand",goods.brandsId);
							$("#title_tips").html(goods.title).attr("href","${ctx}/detailGoods/"+goods.id);
							
							
							//设置颜色信息
							var colorList = obj.colorList;
							if(colorList){
								if(colorList[0] && colorList[0].pic){
									isColorPic = true;
								}
								for(var j = 0;j<colorList.length;j++){
									var color = colorList[j];
									//颜色显示图片
									if(isColorPic){
										var colorModel = $("#color_img_model_id").clone();
										colorModel.find(".color-img").data("id",color.id).data("pic",color.pic).attr("title",color.color).attr("src",_ctx+"/upload/downloadCompress.do?fileName="+color.pic).data("color",color.color).data("price",color.price);
										colorModel.show();
										$("#color_div_id").append(colorModel);
									//颜色显示文字
									}else{
										var colorModel = $("#color_model_id").clone();
										colorModel.find("button").html(color.color).data("id",color.id).data("pic",color.pic).data("color",color.color).data("price",color.price);
										colorModel.show();
										$("#color_div_id").append(colorModel);
									}
									 
								}
								
								
							}
							
							//设置尺码信息
							var sizeList = obj.sizeList;
							if(sizeList){
								for(var k = 0 ;k<sizeList.length;k++){
									var size = sizeList[k];
									var sizeModel = $("#size_model_id").clone();
									sizeModel.find("button").html(size.size).data("id",size.id);	
									sizeModel.show();
									$("#size_div_id").append(sizeModel);
								}
								
								
							}
							
							//设置商品详情信息
							$("#goods_content").append(goods.content);
							
							//封面缩略图
							var titlePicList = obj.titlePicList;
							
							
							var ul = $("#fengmian_sl");
							for(var j = 0;j<titlePicList.length;j++){
								var titlePic = titlePicList[j];
								var newLi = $("#fm_li_id").clone();
								if(j ==0){
									$(".img-box").attr("src","${ctx}/upload/download.do?fileName="+titlePic.name);
									newLi.addClass("tb-selected");
								}
								newLi.attr("id","");
								newLi.find("img").attr("src","${ctx}/upload/downloadCompress.do?fileName="+titlePic.name).data("pic",titlePic.name);
								ul.append(newLi);
								
								newLi.show();
							}
							
							$(".fm-sl img").mouseenter(function(){
								if(!$(this).parent().parent().hasClass("tb-selected")){
									var pic = $(this).data("pic");
									$(".img-box").attr("src","${ctx}/upload/download.do?fileName="+pic);
									$(".tb-selected").removeClass("tb-selected");
									$(this).parent().parent().addClass("tb-selected");
								}
								return false;
							});
							
							var picList = obj.picList;
							
							for(var i = 0 ;i<picList.length;i++){
								var picHeight = 200;
								if(jWei.util.isMobile()){
									picHeight = 120;
									if(picList[i].height <120){
										picHeight =picList[i].height;
									}
								}else{
									if(picList[i].height <200){
										picHeight =picList[i].height;
									}
								}
								//默认先加载2张图片
								var html = "";
								var picDesc = picList[i].picDesc;
								if(i<2){
									if(picDesc){
										html = '<div class="pic-desc">'+picDesc+'</div><div class="thumbnail" style="border:0px;margin-bottom:0px;padding:0px; min-height:'+picHeight+'px;"><img class="lazyImg" src="${ctx }/upload/download.do?fileName='+picList[i].name+'"/></div>';
									}else{
										html = '<div class="thumbnail" style="border:0px;margin-bottom:0px;padding:0px; min-height:'+picHeight+'px;"><img class="lazyImg" src="${ctx }/upload/download.do?fileName='+picList[i].name+'"/></div>';
									}
								}else{
									if(picDesc){
										html = '<div class="pic-desc">'+picDesc+'</div><div class="thumbnail" style="border:0px;margin-bottom:0px;padding:0px; min-height:'+picHeight+'px;"><img class="lazyImg" src="${ctx}/images/d_loading.gif" data-url="${ctx }/upload/download.do?fileName='+picList[i].name+'"/></div>';	
									}else{
										html = '<div class="thumbnail" style="border:0px;margin-bottom:0px;padding:0px; min-height:'+picHeight+'px;"><img class="lazyImg" src="${ctx}/images/d_loading.gif" data-url="${ctx }/upload/download.do?fileName='+picList[i].name+'"/></div>';
									}
								}
								
								$("#subPicBox").append(html);
